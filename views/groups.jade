extends layout

block content
    h1.
        Groups
    h2.
        Inputs
    table(border="1" align="center")
        thead
            tr
                th Group
                th Name
                th Direct Level Group
                th Recall Scene Group
        tbody
        each key in groupsIN
            tr 
                td(align="center" width="100")!{key.groupnumber.toString()}
                td(align="center" width="300")!{key.groupname.toString()}
                td(align="center" width="300")
                    form(method="POST", action="#{ApiDLG}")
                        input(type="hidden", name="_method" , value="PUT")
                        input(type="hidden", name="group" , value= "#{key.groupnumber.toString()}")
                        input(type="number", name="level", min="0", max="100", required, title="Set level (0-100%) for group")
                        input(type="submit")
                td(align="center" width="300")
                    form(method="POST", action="#{ApiRSG}")
                        input(type="hidden", name="_method" , value="PUT")
                        input(type="hidden", name="group" , value= "#{key.groupnumber.toString()}")
                        input(type="hidden", name="block" , value= "1")
                        input(type="number", name="scene", min="1", max="15", required, title="Set scene (1-15) for group")
                        input(type="submit")